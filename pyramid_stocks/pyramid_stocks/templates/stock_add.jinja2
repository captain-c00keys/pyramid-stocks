<!DOCTYPE html>
{% extends "base.jinja2" %}


<h1>Please enter your stock purchases</h1>
{% block content %}
<form action="{{request.route_url('stock')}}" method="GET" id="customer-info">
    <input type="text" name="symbol" placeholder="MSFT">
    <button type="submit">Search</button>
</form>

{% if company %}
    <form action="{{request.route_url('stock')}}" method="POST">
        <input type="text" name="companyName" value={{company.companyName}} hidden required readonly>
        <input type="text" name="symbol" value={{company.symbol}} hidden required readonly>
        <input type="text" name="exchange" value={{company.exchange}} hidden readonly>
        <input type="text" name="website" value={{company.website}} hidden readonly>
        <input type="text" name="CEO" value={{company.CEO}} hidden readonly>
        <input type="text" name="industry" value={{company.industry}} hidden readonly>
        <input type="text" name="sector" value={{company.sector}} hidden readonly>
        <input type="text" name="issueType" value={{company.issueType}} hidden readonly>
        <input type="text" name="description" value={{company.description}} hidden readonly>
        <button type="submit">Add To Portfolio</button>
    </form>

    <div>
        {{company}}
    </div>

    {% endif %}
    {% endblock content %}